<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:materialdesign="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/other_fragment_topbar"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/include2"
        />
    <com.gc.materialdesign.views.ButtonFloatSmall
        android:id="@+id/buttonColorSelector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:background="#14446c"
        materialdesign:iconDrawable="@drawable/icn_select_color"
        android:layout_marginStart="56dp"
        android:layout_alignBottom="@+id/linearLayout3"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout3"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/include2"

        android:layout_alignParentStart="true">


    </LinearLayout>

    <include layout="@layout/test_otherfragment_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:id="@+id/include3"
        android:layout_below="@+id/include4"
        android:layout_alignParentStart="true" />

    <include layout="@layout/test_otherfragment_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:id="@+id/include4"
        android:layout_below="@+id/include5"
        android:layout_alignParentStart="true" />

    <include layout="@layout/test_otherfragment_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:id="@+id/include5"
        android:layout_below="@+id/include6"
        android:layout_alignParentStart="true" />

    <include layout="@layout/test_otherfragment_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:id="@+id/include6"
        android:layout_below="@+id/linearLayout3"
        android:layout_marginTop="72dp"
        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#000000"
        android:id="@+id/linearLayout4"
        android:layout_below="@+id/linearLayout3"
        android:layout_marginTop="36dp"
        android:layout_alignStart="@+id/buttonColorSelector"></LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="其他功能："
        android:id="@+id/textView7"
        android:layout_alignBottom="@+id/linearLayout4"
        android:layout_alignStart="@+id/linearLayout4" />


</RelativeLayout>